 {% for exp in expense %}
<div class="col-xl-3 col-md-3">
    <a href="{{router.getPath('ess_expenses')}}{{exp.url}}">
    <div class="card-box">                   

        <h4 class="header-title mt-0 m-b-30">{{exp.label}}</h4>

        <div class="widget-box-2">
            <div class="widget-detail-2">
                <span class="badge badge-success badge-pill pull-left m-t-20">{{exp.days}} <i class="mdi mdi-trending-up"></i> </span>
                <h4 class="mb-0"> {{exp.totalExp}} </h4>
                <p class="text-muted m-b-25">{{exp.month}}</p>
            </div>
            <div class="progress progress-bar-success-alt progress-sm mb-0">
                <div class="progress-bar progress-bar-success" role="progressbar"
                     aria-valuenow="115" aria-valuemin="0" aria-valuemax="100"
                     style="width: {{exp.percentage}}%;">
                    <span class="sr-only">{{exp.percentage}}% Complete</span>
                </div>
            </div>
        </div>
    </div>
    </a>
</div><!-- end col -->
{% endfor %}