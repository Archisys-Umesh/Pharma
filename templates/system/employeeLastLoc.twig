{% extends "modalForm.twig" %}
{% block modalTitle %} <span class="pull-left">{{form_name}}</span> {% endblock %}
{% block modalBody %}
    <div class="">Login Device Name : {{loginDevice}}</div>
    
    <div class="progress progress-md">
        <div class="progress-bar progress-bar-primary progress-bar-striped active" role="progressbar" aria-valuenow="{{deviceBattery}}" aria-valuemin="0" aria-valuemax="100" style="width: {{deviceBattery}}%;">
            Device Battery: {{deviceBattery}}%
        </div>
    </div>
    <div id="map" style="height: 300px; width: 540px"></div>
    
{% endblock %}
{% block script %}

<script type ='text/javascript'>
        
    setTimeout(function(){

          var lat = {{lat}};
          var lng = {{lng}};
          initAutocomplete(lat,lng);
          
        }, 2000); 

    $(document).ready(function(){                    
        $("#saveuser").hide();
        
    });

function initAutocomplete(lat,lng) {
        var myLatLng = {lat: lat, lng: lng};

        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 16,
          center: myLatLng
        });

        var marker = new google.maps.Marker({
          position: myLatLng,
          map: map
        });
      }
</script>
{% endblock %}        
