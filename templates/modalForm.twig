
<div class="modal-dialog animated fadeInUp">    
        <div class="modal-content">            
            <form data-ride="ajaxModalForm" id="myForm" data-validate ="parsley" class="form-horizontal" role="form" action="{{request.getUri()}}" method="post">
            
            <div class="modal-header"> <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">  {% block modalTitle %}{% endblock %} </h4>
                </div>
            <div class="modal-body">                                                
                
                {% block modalBody %}{% endblock %}
                
                {% set error = session.getFlash('error') %}
                    {% if error != "" %}
                    <div class="form-group text-center m-t-30">
                        <div class="col-xs-12">
                            <div class="alert alert-danger" role="alert">
                                {{error}}
                            </div>

                        </div>
                    </div>
                {% endif %}
            </div>

            <div class="modal-footer"> <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
                {% if noSave is not defined %}
                    <button id="saveuser" name="buttonValue" value="save" type="submit" class="btn btn-primary">Save</button>                
                {% endif%}
                {% if canDelete is defined %}
                    {# <button id="delete" name="buttonValue"  title='Delete' value="delete" type="submit" onclick="return confirm('Are you sure to delete this record?')"  class="btn btn-danger">Delete</button>  
                                   #}
                    <button id="delete" name="buttonValue"  title='Delete' value="delete" type="submit"  class="btn btn-danger">Delete</button>  
                                
                   
                {% endif%}
            </div>               
            </form>                        
        </div>
        
</div>

