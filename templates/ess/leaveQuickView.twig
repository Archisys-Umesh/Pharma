<div class="card-box table-responsive">            
    <div class="col-md-12">                                    
        <div class="pull-right">                                                                                    
                <a href="#" onclick="closeQuickView()" class=""><i class="fa fa-remove"></i></a>                                        
        </div>
        <div class="profile-info-name">            
                <div class="profile-info-detail">
                    <h3 class="m-t-0 m-b-0">{{leave.LeaveReason}}</h3>
                    <p class="text-muted m-b-20"><i>{{leave.LeaveFrom|date('d-m-Y')}} | {{leave.LeaveTo|date('d-m-Y')}}</i></p>                    
                </div>
                <div class="clearfix"></div>
    </div>
    </div>
    <div class="col-md-12 p-20">                            
        {{leave_actions|raw}}
        <div class="pull-right">                                                                                    
            {% if getleaveStatus  %}
                <a href="#" class="btn btn-danger deleteEntity"><i class="fa fa-trash-o"></i> Delete </a>                                                
            {% endif %}
            
        </div>
    </div>                            
</div>

<script type="text/javascript">
$(document).ready(function(){
    $(".deleteEntity").click(function(){
        deletEntity({{leave.leaveId}},"Are you sure you want to delete event for {{leave.LeaveFrom|date('d-m-Y')}} ?");
    });
});

function reloadExpenseSingle()
{    
    loadGrid();
    quickTripView({{event.leaveId}});
}

</script>
