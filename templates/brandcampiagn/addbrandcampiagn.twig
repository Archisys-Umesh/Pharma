		$("#AddRow").click(function () {
			showLoader();
			var total_element = $("#ClassificationMinMax").length;
			var lastRow = $(".FormRow:last");
			var lastid = lastRow.attr("id");
			var split_id = lastid.split("_");
			var nextindex = Number(split_id[1]) + 1;
			var orgUnitId = $('#orgUnits').val();
			var max = 50;

				if (total_element >= max) {
					return;
				}

			$.ajax({
				type: "GET",
				url: "{{ router.getPath('getClassification') }}",
				data: {
					"orgUnitId": orgUnitId
				},
				success: function (response) {					
					hideLoader();
					var seloption = '<option value="0">--- Select Classification ---</option>';
					$.each(response, function (index, value) {
						seloption += '<option value="' + index + '">' + value + '</option>';
					});

					var appendDiv = `
						<div class="FormRow" id="FormRowId_${nextindex}">
							<div class="col-md-5 form-group">
								<label for="classification">Classification</label>
								<select class="form-control" id="Classification_${nextindex}" name="classification[]">
									${seloption}
								</select>
							</div>
							<div class="col-md-3 form-group">
								<label for="minimum">Minimum</label>
								<input class="form-control" type="number" name="minimum[]" min="0">
							</div>
							<div class="col-md-3 form-group">
								<label for="maximum">Maximum</label>
								<input class="form-control" type="number" name="maximum[]" min="0">
							</div>
							<div class="col-md-1 form-group">
								<span id="remove_${nextindex}" class="btn btn-danger remove m-t-20">-</span>
							</div>
						</div>`;

					lastRow.after(appendDiv);
				},
				error: function () {					
					 toastr["warning"]("Classification not found!");
				     return false;
				}
			});
        });


		$('#ClassificationMinMax').on('click', '.remove', function () {
			var id = $(this).attr('id');
			var split_id = id.split("_");
			var deleteindex = split_id[1];
			$("#FormRowId_" + deleteindex).remove();
		});

		$('#select-all').click(function(){
			$('#Position').multiSelect('select_all');
			return false;
		});
		$('#deselect-all').click(function(){
			$('#Position').multiSelect('deselect_all');
			return false;
		});

		// Generate and set a unique 10-character alphanumeric code
			(function() {
				const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
				let code = Array.from({length: 10}, () => characters[Math.floor(Math.random() * characters.length)]).join('');
				
				document.getElementById('campiagn_code').value = code;
			})();
	});
</script>
{% endblock %}
