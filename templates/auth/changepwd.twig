<div class="modal-dialog animated fadeInUp">    
        <div class="modal-content">            
            <form data-ride="ajaxModalForm" data-validate ="parsley" class="form-horizontal" role="form" action="{{request.getUri()}}" method="post">
            
            <div class="modal-header"> <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">  Change Password </h4>
                </div>
            <div class="modal-body">                                                
                
                <div class="form-group has-error">
                    <label class="col-md-3 control-label" for="state-danger">Current Password</label>
                    <div class="col-md-6">
                        <input type="password" id="state-danger" name="oldpwd" class="form-control" placeholder="Current Password">
                    </div>
                </div>
                <div class="form-group has-error">
                    <label class="col-md-3 control-label" for="state-danger">New Password</label>
                    <div class="col-md-6">
                        <input type="password" id="state-danger" name="newpwd" class="form-control" placeholder="New Password">
                    </div>
                </div>
                <div class="form-group has-error">
                    <label class="col-md-3 control-label" for="state-danger">Retype New Password</label>
                    <div class="col-md-6">
                        <input type="password" id="state-danger" name="renewpwd" class="form-control" placeholder="Retype New Password">
                    </div>
                </div>
                
                {% set error = session.getFlash('error') %}
                    {% if error != "" %}
                    <div class="form-group text-center m-t-30">
                        <div class="col-xs-12">
                            <div class="alert alert-danger" role="alert">
                                {{error}}
                            </div>

                        </div>
                    </div>
                {% endif %}
            </div>

            <div class="modal-footer"> <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
                <button id="saveuser" name="buttonValue" value="save" type="submit" class="btn btn-primary">Save</button>                                
            </div>               
            </form>                        
        </div>
        
</div>

{% block script %}{% endblock %}


