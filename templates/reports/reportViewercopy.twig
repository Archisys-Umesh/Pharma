{% extends "app.twig" %}
{% block title %} {{ title }} {% endblock %}
{% block page %}

<div class="row col-sm-12">
    <div class="card-box">
        <div class="col-sm-11">
            <div class="project-sort">
                <div class="project-sort-item">                    
                    <form class="form-inline" id="gridFilters">
                       {{ filters | raw}}                                                                                                                                                             
                    </form>                    
                </div>
            </div>
        </div>  
        <div class="col-sm-1 pull-right"> 
             <a href="#" class="btn btn-success btn-md waves-effect waves-light m-b-30" data-overlaycolor="#36404a" id="btnSearch">
                      Show <i class="fa fa-search"></i>
            </a>  
         </div>
         <div class="clearfix"></div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 text-center" id="buttons">
        
    </div>
</div>

{% endblock %}

{% block script %}
    <script type="text/javascript">
        $("#btnSearch").click(function(){
            $( "#buttons" ).empty();
            var month = $('#selectMonth').val();
            $( "#buttons" ).append( '<a href="{{router.getPath('mas_month_report',{id:""})}}?month='+month+'" title="Mas" class="btn btn-info btn-xl">MAS</a>  <a href="{{router.getPath('dvp_month_report',{id:""})}}?month='+month+'" title="Dvp" class="btn btn-info btn-xl">DVP</a>  <a href="{{router.getPath('sgpi_brand_month_report',{id:""})}}?month='+month+'" title="Sgpi" class="btn btn-info btn-xl">SGPI</a>' )
        });
    </script>
{% endblock %}